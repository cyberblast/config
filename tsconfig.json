{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "strict": false,
    "outDir": "dist",
    "module": "system",
    "allowJs": true,
    "checkJs": true,
    "typeRoots": [
      "./types/",
      "./node_modules/@types"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es6",
      "es7",
      "esnext"
    ]
  },
  "include": [
    "./src/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
